<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controller.BorrowsController"
            style="-fx-background-color: #f5f7fa;">

    <!-- Top Navigation -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" 
              style="-fx-background-color: linear-gradient(from 0% 0% to 100% 0%, #667eea, #764ba2); -fx-padding: 20;">
            <Button text="â† Back" onAction="#goBack"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="ðŸ“š Borrows Management"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="" prefWidth="80"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="25">
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>

                <!-- Borrow Entry Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Member ID:"/>
                        <TextField fx:id="borrowMemberIdField" promptText="Enter member ID" prefWidth="150"/>
                        <Button text="Search" onAction="#searchMember"/>
                        <Label fx:id="memberInfoLabel"/>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Document Title:"/>
                        <TextField fx:id="borrowDocTitleField" promptText="Enter document title" prefWidth="250"/>
                        <Button text="Search" onAction="#searchDocument"/>
                        <Label fx:id="documentInfoLabel"/>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Borrow Date:"/>
                        <DatePicker fx:id="borrowDateField"/>
                        <Label text="Expected Return:"/>
                        <DatePicker fx:id="expectedReturnDateField"/>
                        <Button text="Add Borrow" onAction="#addBorrow"/>
                        <Button text="Clear" onAction="#clearFields"/>
                    </HBox>
                </VBox>

                <!-- Statistics Cards -->
<HBox spacing="20">
    <VBox spacing="10" alignment="CENTER" 
          style="-fx-background-color: linear-gradient(to bottom right, #48bb78, #38a169); -fx-padding: 20; -fx-background-radius: 15;" 
          prefWidth="200">
        <Label text="Active"/>
        <Label fx:id="activeBorrowsLabel" text="0"/>
    </VBox>

    <VBox spacing="10" alignment="CENTER" 
          style="-fx-background-color: linear-gradient(to bottom right, #f56565, #ed8936); -fx-padding: 20; -fx-background-radius: 15;" 
          prefWidth="200">
        <Label text="Overdue"/>
        <Label fx:id="overdueBorrowsLabel" text="0"/>
    </VBox>

    <VBox spacing="10" alignment="CENTER" 
          style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2); -fx-padding: 20; -fx-background-radius: 15;" 
          prefWidth="200">
        <Label text="Returned Today"/>
        <Label fx:id="returnedTodayLabel" text="0"/>
    </VBox>
</HBox>

                <!-- Borrows Lists -->
                <TabPane>
                    <Tab text="Active Borrows">
                        <ScrollPane fitToWidth="true" prefHeight="300">
                            <VBox fx:id="borrowsListView" spacing="10">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                            </VBox>
                        </ScrollPane>
                    </Tab>
                    <Tab text="Overdue">
                        <ScrollPane fitToWidth="true" prefHeight="300">
                            <VBox fx:id="overdueListView" spacing="10">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                            </VBox>
                        </ScrollPane>
                    </Tab>
                    <Tab text="History">
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <HBox spacing="10">
                                <Label text="Filter:"/>
                                <ComboBox fx:id="historyFilterField"/>
                                <Label fx:id="overdueCountLabel"/>
                            </HBox>
                            <ScrollPane fitToWidth="true" prefHeight="300">
                                <VBox fx:id="historyListView" spacing="10">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                </VBox>
                            </ScrollPane>
                        </VBox>
                    </Tab>
                </TabPane>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>